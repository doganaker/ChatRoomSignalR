
@{
    ViewData["Title"] = "Index";
}

@model List<ChatRoomSignalR.Models.Entities.AdminUser>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet">

    <script src="~/js/signalr/dist/browser/signalr.js"></script>

    <style>
        .flat {
            display: flex;
        }

        #contacts li:hover {
            color: dodgerblue;
            cursor: pointer;
        }

        #contacts li {
            list-style-type: none;
        }

        #chat li {
            list-style-type: none;
        }

        .chatbox {
            visibility: hidden;
        }

        .dot {
            height: 10px;
            width: 10px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
            margin-right: 10px;
        }

        .navbar-brand {
            font-family: 'Dancing Script', cursive;
            font-size: 45px;
            -webkit-text-stroke: 1px #4788FF;
            text-shadow: -2px 0 ghostwhite, 0 2px ghostwhite, 0px 0 ghostwhite, 0 0px ghostwhite;
        }

        .text {
            font-family: 'Dancing Script', cursive;
            font-size: 25px !important;
            -webkit-text-stroke: 0px #4788FF;
            text-shadow: 0 0 black;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light" style="background-color: #4788FF">
        <div class="container">
            <a class="navbar-brand" style="color:ghostwhite;" href="/Home/Index/">ChatRoom</a>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text" href="#" data-toggle="dropown" aria-haspopup="true" aria-expanded="false">
                        Welcome, @ViewBag.Name.Substring(0, 1).ToUpper()@ViewBag.Name.Substring(1, ViewBag.Name.IndexOf("@") - 1)
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <br />
    <br />
    <div class="container flat">

        <div class="col-md-4">
            <h3>Contacts</h3>
            <ul id="contacts">
                @foreach (var item in Model)
                {
                    if (item.EMail != ViewBag.Name)
                    {
                        if (item.OnlineStatus == true)
                        {

                            <li id="@item.ID"><span class="dot" style="background-color:green"></span>@item.EMail.Substring(0, 1).ToUpper()@item.EMail.Substring(1, item.EMail.IndexOf("@") - 1)</li>
                        }
                        else
                        {

                            <li id="@item.ID"><span class="dot" style="background-color:red"></span>@item.EMail.Substring(0, 1).ToUpper()@item.EMail.Substring(1, item.EMail.IndexOf("@") - 1)</li>
                        }

                    }
                }
            </ul>
        </div>
        <div class="col-md-6 chatbox">
            <ul id="chat">
            </ul>
            <br />
            <h3>Chat</h3>
            <input type="text" name="name" id="msg" value="" />
            <button id="btnSend" class="btn btn-primary"> Send </button>
        </div>

    </div>

    <script>

        "use strict";

        var connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();



        connection.start().then(function () {

            console.log("Connection established!")

        }).catch(function (err) {

            return console.error(err.ToString());
        });

        var connectionid = "";

        $("#contacts li").click(function () {

            $("#chat li").remove();

            $(".chatbox").css('visibility', 'visible');

            var id = $(this).attr("id");
            var url = "/Home/User/" + id;

            $.ajax({
                type: "GET",
                url: url,
                dataType: "json",
                success: function (user) {
                    connectionid = user.connectionID;
                    console.log(connectionid);
                }
            });

        });


        $("#btnSend").click(function () {

            var message = $("#msg").val();

            connection.invoke("SendMessage", connectionid, message).catch(function (err) {

            });

            $("#msg").val("");

        });

        connection.on("ReceiveMessage", function (msg) {

            $("#chat").append("<li>" + msg + "</li>");
        });


        connection.on("Onlineuser", function (userid) {
            $("#" + userid + " span").css("background-color", "green")
        })

        connection.on("Offlineuser", function (userid) {
            $("#" + userid + " span").css("background-color", "red")
        })

    </script>

   
</body>
</html>


